<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm" 
             xmlns:ViewModels="clr-namespace:DXApplication4.ViewModels"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid" 
             xmlns:ADTSC20DataSet1TableAdapters="clr-namespace:DXApplication4.ADTSC20DataSet1TableAdapters" 
             xmlns:DXApplication4="clr-namespace:DXApplication4" 
             x:Class="DXApplication4.Views.DoorControlView"
             xmlns:local ="clr-namespace:DXApplication4.ViewModels"
             mc:Ignorable="d"
             DataContext="{dxmvvm:ViewModelSource Type={x:Type ViewModels:DoorControlViewModel}}"
             d:DesignHeight="540" d:DesignWidth="900">


    <UserControl.Resources>
        <dx:TypedSimpleSource x:Key="TypedSimpleSource" AdapterType="{x:Type ADTSC20DataSet1TableAdapters:CM_AlarmLogTableAdapter}" ContextType="{x:Type DXApplication4:ADTSC20DataSet1}" Path="CM_AlarmLog">
            <dx:DesignDataManager.DesignData>
                <dx:DesignDataSettings RowCount="5"/>
            </dx:DesignDataManager.DesignData>
        </dx:TypedSimpleSource>
    </UserControl.Resources>

    <Viewbox Stretch="Uniform">
    <Grid>
        <dx:DXTabControl Height="auto" Margin="0,0,0,0" Width="auto">
            <dx:DXTabItem Header="출입문 관리">
                <Grid Background="Transparent">
                    <ListView Name="SelectedDoor" HorizontalAlignment="Left" Height="702" Margin="30,30,0,0" VerticalAlignment="Top" MinWidth="200" MinHeight="400" Width="354">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                        <dx:SimpleButton Content="추가" Height="30" Width="80" Margin="406,341,1079,388" Command="{Binding AddDoorCommand}" CommandParameter="{Binding TreeListCommands, ElementName=DoorList}"/>
                    <dx:SimpleButton Content="삭제" Height="30" Width="80" Margin="406,400,1079,332" Command="{Binding DeleteDoorCommand}" CommandParameter="{Binding DataContext, ElementName=SelectedDoor}"/>

                        <dxg:GridControl AutoGenerateColumns="AddNew" EnableSmartColumnsGeneration="True" HorizontalAlignment="Left" Margin="515,30,0,0" VerticalAlignment="Top" MinWidth="390" MinHeight="400" MaxWidth="400" ItemsSource="{Binding Data, Source={StaticResource TypedSimpleSource}}" Height="702" Width="1032">
                            <dxg:GridControl.View>
                                <dxg:TreeListView ShowCheckboxes="True"  Name="DoorList" Margin="0,0,-634,0"/>
                            </dxg:GridControl.View>
                        </dxg:GridControl>


               
                </Grid>
            </dx:DXTabItem>


            <dx:DXTabItem Header="조직 관리">
                <Grid Background="Transparent">
                        <dx:SimpleButton Content="등록"  Height="20" Width="70"  Margin="30,67,1474,683" Command="{Binding AddGroupCommand}" CommandParameter="{Binding Text, ElementName=inputGroupName}" />
                        <dx:SimpleButton Content="제거"  Height="20" Width="70"  Margin="264,67,1240,683" Command="{Binding DeleteGroupCommand}"/>
                        <dx:SimpleButton Content="추가"  Height="20" Width="70"  Margin="654,308,850,442" Command="{Binding AddGroupDoorCommand}" CommandParameter="{Binding TreeListCommands, ElementName=GroupList}" />
                        <dx:SimpleButton Content="삭제"  Height="20" Width="70"  Margin="654,362,850,388" Command="{Binding DeleteGroupDoorCommand}" CommandParameter="{Binding DataContext, ElementName=SelectedGroup}"/>
                        <TextBox Name="inputGroupName" HorizontalAlignment="Left" Height="23" Margin="30,30,0,0" TextWrapping="Wrap" Text="등록할 그룹명" VerticalAlignment="Top" Width="170"/>


                        <dxg:GridControl Name="GroupControl" SelectedItem="{Binding GroupSelected}" AutoGenerateColumns="AddNew" EnableSmartColumnsGeneration="True" HorizontalAlignment="Left" Margin="30,100,0,0" VerticalAlignment="Top" SelectionMode="Row" ItemsSource="{Binding SelectedGroupCollection}" ColumnsSource="{Binding SelectedGroupCollection}">
                        <dxg:GridControl.View >
                                <dxg:TableView ShowCheckBoxSelectorColumn="True" Name="Group" AllowEditing="False" ShowTotalSummary="True" AutoWidth="False" Width="302" Height="605" VerticalAlignment="Bottom"/>
                        </dxg:GridControl.View>
                    </dxg:GridControl>


                    <dxg:GridControl AutoGenerateColumns="AddNew" EnableSmartColumnsGeneration="True" HorizontalAlignment="Left" Margin="350,30,0,00" MinHeight="700" VerticalAlignment="Top"  SelectionMode="MultipleRow" ItemsSource="{Binding Data, Source={StaticResource TypedSimpleSource}}">
                        <dxg:GridControl.View >
                            <dxg:TableView Name="SelectedGroup" AllowEditing="False" ShowTotalSummary="True" AutoWidth="False" ShowCheckBoxSelectorInGroupRow="True" Width="268" Height="698" VerticalAlignment="Bottom"/>
                        </dxg:GridControl.View>
                    </dxg:GridControl>


                    <dxg:GridControl AutoGenerateColumns="AddNew" EnableSmartColumnsGeneration="True" HorizontalAlignment="Left" Margin="758,30,0,0" VerticalAlignment="Top"  SelectionMode="MultipleRow" ItemsSource="{Binding Data, Source={StaticResource TypedSimpleSource}}" Height="700" Width="762">
                        <dxg:GridControl.View>
                            <dxg:TreeListView Name="GroupList"/>
                        </dxg:GridControl.View>
                    </dxg:GridControl>

                </Grid>
            </dx:DXTabItem>
        </dx:DXTabControl>

    </Grid>
    </Viewbox>
</UserControl>
